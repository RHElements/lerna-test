{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Codeblock",
  "description": "A component to display formatted and prettified code",
  "type": "object",
  "tag": "pfe-codeblock",
  "class": "PfeCodeblock",
  "category": "content",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "default": {
          "title": "Default slot",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        }
      },
      "required": ["default"]
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {}
    },
    "events": {
      "title": "Events",
      "description": "Definition of the supported events",
      "type": "object",
      "properties": {
        "change": {
          "title": "Change",
          "type": "string",
          "default": "pfe-codeblock:change"
        },
        "click": {
          "title": "Click",
          "type": "string",
          "default": "pfe-codeblock:click"
        }
      }
    }
  },
  "required": ["slots", "attributes", "events"],
  "additionalProperties": false
}
