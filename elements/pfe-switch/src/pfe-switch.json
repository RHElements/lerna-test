{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Switch",
  "description": "Creates a fancy switch element from checkbox markup",
  "type": "object",
  "tag": "pfe-switch",
  "class": "PfeSwitch",
  "category": "content",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "default": {
          "title": "Default slot",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        }
      },
      "required": ["default"]
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        "form": {
          "title": "Form",
          "type": "string",
          "enum": [],
          "default": "",
          "prefixed": true
        }
      }
    }
  },
  "required": ["slots", "attributes"],
  "additionalProperties": false
}
