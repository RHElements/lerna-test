{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Progress Indicator",
  "description": "This element creates a progress indicator when the user is waiting on http events.",
  "type": "object",
  "tag": "pfe-progress-indicator",
  "class": "pfe-progress-indicator",
  "category": "content",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "content": {
          "title": "Content",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        }
      }
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        "status": {
          "title": "Status",
          "type": "string",
          "enum": [
            "indeterminate"
          ],
          "default": "default",
          "prefixed": true,
          "observer": "_basicAttributeChanged"
        },
        "size": {
          "title": "Size",
          "type": "string",
          "enum": [
            "sm",
            "md",
            "xl"
          ],
          "default": "md"
        }
      }
    }
  },
  "required": [
    "slots",
    "attributes"
  ],
  "additionalProperties": false
}
