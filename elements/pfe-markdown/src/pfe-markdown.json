{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Markdown",
  "description": "This element converts markdown into HTML.",
  "type": "object",
  "tag": "pfe-markdown",
  "class": "pfe-markdown",
  "category": "container",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "default": {
          "title": "Markdown",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        }
      }
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        "on": {
          "title": "Context",
          "type": "string",
          "enum": [
            "light",
            "dark"
          ],
          "prefixed": false
        }
      }
    }
  },
  "required": ["slots", "attributes"],
  "additionalProperties": false
}
