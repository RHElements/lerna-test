{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Band",
  "description": "This element creates a header, body, footer, and aside region in which to place content or other components.",
  "type": "object",
  "tag": "pfe-band",
  "class": "pfe-band",
  "category": "container",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "header": {
          "title": "Header",
          "type": "array",
          "namedSlot": true,
          "maxItems": 3,
          "items": {
            "title": "Body item",
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        },
        "body": {
          "title": "Body",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "pfe-card"
              },
              {
                "$ref": "raw"
              }
            ]
          }
        },
        "footer": {
          "title": "Footer",
          "type": "array",
          "namedSlot": true,
          "maxItems": 3,
          "items": {
            "oneOf": [
              {
                "$ref": "pfe-cta"
              },
              {
                "$ref": "raw"
              }
            ]
          }
        },
        "aside": {
          "title": "Aside",
          "type": "array",
          "namedSlot": true,
          "maxItems": 5,
          "items": {
            "oneOf": [
              {
                "$ref": "pfe-card"
              },
              {
                "$ref": "raw"
              }
            ]
          }
        }
      }
    }
  },
  "required": ["slots", "attributes"],
  "additionalProperties": false
}
